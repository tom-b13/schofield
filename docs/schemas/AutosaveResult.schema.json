{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/AutosaveResult.schema.json",
  "title": "AutosaveResult",
  "type": "object",
  "properties": {
    "saved": {
      "oneOf": [
        { "type": "boolean" },
        {
          "type": "object",
          "properties": {
            "question_id": { "type": "string", "format": "uuid" },
            "state_version": { "type": "integer", "minimum": 0 }
          },
          "required": ["question_id", "state_version"],
          "additionalProperties": false
        }
      ]
    },
    "etag": { "type": "string" },
    "suppressed_answers": {
      "type": "array",
      "items": { "type": "string", "format": "uuid" }
    },
    "visibility_delta": {
      "type": "object",
      "properties": {
        "now_visible": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" }
        },
        "now_hidden": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" }
        }
      }
    }
  }
}
