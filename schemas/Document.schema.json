{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/Document.schema.json",
  "title": "Document",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "order_number",
    "version"
  ],
  "properties": {
    "id": {
      "$ref": "schemas/DocumentId.schema.json"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "order_number": {
      "type": "integer",
      "minimum": 1
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
