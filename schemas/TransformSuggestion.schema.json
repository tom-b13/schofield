{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://b13.ai/schemas/TransformSuggestion.schema.json",
  "title": "TransformSuggestion",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "transform_id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "answer_kind": { "type": "string", "enum": ["short_string", "long_text", "boolean", "number", "enum_single"] },
    "options": {
      "type": "array",
      "items": { "$ref": "https://b13.ai/schemas/OptionSpec.schema.json" }
    },
    "companion": { "$ref": "https://b13.ai/schemas/CompanionHint.schema.json" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "rationale": { "type": "string" }
  },
  "required": ["transform_id", "name", "answer_kind"]
}