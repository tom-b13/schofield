{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/DocumentResponse.schema.json",
  "title": "DocumentResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "document"
  ],
  "properties": {
    "document": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "document_id",
        "title",
        "order_number",
        "version"
      ],
      "properties": {
        "document_id": {
          "$ref": "./document_id.schema.json"
        },
        "title": {
          "$ref": "./Document.schema.json#/properties/title"
        },
        "order_number": {
          "type": "integer",
          "minimum": 1,
          "readOnly": true
        },
        "version": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
