{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://b13.ai/schemas/migration_outputs.schema.json",
  "title": "Epic A \u2014 migration outputs",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "entities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "fields"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Z][A-Za-z0-9]*$"
          },
          "fields": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "name",
                "type",
                "encrypted"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "pattern": "^[a-z][a-z0-9_]*$"
                },
                "type": {
                  "type": "string",
                  "minLength": 1
                },
                "encrypted": {
                  "type": "boolean"
                }
              }
            }
          },
          "primary_key": {
            "type": "object",
            "required": [
              "columns"
            ],
            "additionalProperties": false,
            "properties": {
              "columns": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "pattern": "^[a-z][a-z0-9_]*$"
                }
              }
            }
          },
          "foreign_keys": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "columns",
                "references"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "columns": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "pattern": "^[a-z][a-z0-9_]*$"
                  }
                },
                "references": {
                  "type": "object",
                  "required": [
                    "entity",
                    "columns"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "entity": {
                      "type": "string",
                      "pattern": "^[A-Z][A-Za-z0-9]*$"
                    },
                    "columns": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9_]*$"
                      }
                    }
                  }
                }
              }
            }
          },
          "unique_constraints": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "columns"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "columns": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "pattern": "^[a-z][a-z0-9_]*$"
                  }
                }
              }
            }
          },
          "indexes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "columns"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "columns": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "pattern": "^[a-z][a-z0-9_]*$"
                  }
                }
              }
            }
          }
        }
      }
    },
    "enums": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "values"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "values": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "encrypted_fields": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z][A-Za-z0-9]*\\.[a-z][a-z0-9_]*$"
      },
      "uniqueItems": true
    },
    "constraints_applied": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "migration_journal": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "filename",
          "applied_at"
        ],
        "additionalProperties": false,
        "properties": {
          "filename": {
            "type": "string",
            "pattern": "^migrations/(001_init|002_constraints|003_indexes|004_rollbacks)\\.sql$"
          },
          "applied_at": {
            "type": "string",
            "format": "date-time",
            "pattern": "Z$"
          }
        }
      }
    }
  },
  "required": [
    "entities"
  ]
}