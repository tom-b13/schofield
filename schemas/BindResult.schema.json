{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://b13.ai/schemas/BindResult.schema.json",
  "title": "BindResult",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "bound": { "type": "boolean" },
    "question_id": { "$ref": "https://b13.ai/schemas/QuestionId.schema.json" },
    "placeholder_id": { "type": "string", "format": "uuid" },
    "answer_kind": { "type": "string", "enum": ["short_string", "long_text", "boolean", "number", "enum_single"] },
    "options": {
      "type": "array",
      "items": { "$ref": "https://b13.ai/schemas/OptionSpec.schema.json" }
    },
    "etag": { "type": "string" }
  },
  "required": ["bound", "question_id", "placeholder_id", "answer_kind", "etag"]
}