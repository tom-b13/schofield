{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ValidationProblem",
  "allOf": [
    {
      "$ref": "Problem.schema.json"
    },
    {
      "type": "object",
      "required": [
        "errors"
      ],
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "path",
              "message"
            ],
            "properties": {
              "path": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "code": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  ]
}