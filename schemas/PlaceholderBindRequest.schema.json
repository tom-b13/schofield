{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://b13.ai/schemas/PlaceholderBindRequest.schema.json",
  "title": "PlaceholderBindRequest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "placeholder": { "$ref": "https://b13.ai/schemas/PlaceholderProbe.schema.json" },
    "transform_id": { "type": "string", "minLength": 1 },
