{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AnswerDeltaBatch",
  "type": "object",
  "required": [
    "items"
  ],
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "question_id"
        ],
        "additionalProperties": false,
        "properties": {
          "question_id": {
            "type": "string",
            "format": "uuid"
          },
          "value": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              },
              {
                "type": "boolean"
              }
            ]
          },
          "option_id": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    }
  }
}