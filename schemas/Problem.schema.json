{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/Problem.schema.json",
  "title": "Problem",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "integer"
    },
    "detail": {
      "type": "string"
    },
    "instance": {
      "type": "string",
      "format": "uri-reference"
    }
  },
  "required": [
    "title",
    "status"
  ],
  "additionalProperties": true,
  "description": "application/problem+json per RFC7807."
}