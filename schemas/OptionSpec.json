{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.schofield.local/epic-d/OptionSpec.json",
  "title": "OptionSpec",
  "type": "object",
  "properties": {
    "value": {
      "type": "string",
      "pattern": "^[A-Z_][A-Z\\d_]*$"
    },
    "label": {
      "type": "string"
    },
    "placeholder_key": {
      "type": "string"
    },
    "placeholder_id": {
      "oneOf": [
        { "type": "string", "format": "uuid" },
        { "type": "null" }
      ]
    }
  },
  "required": [
    "value"
  ],
  "additionalProperties": false
}
