  "$id": "https://b13.ai/schemas/Placeholder.schema.json",
  "title": "Placeholder",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "document_id": { "$ref": "https://b13.ai/schemas/DocumentId.schema.json" },
