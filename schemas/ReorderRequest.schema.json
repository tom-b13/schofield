{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/ReorderRequest.schema.json",
  "title": "ReorderRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "items"
  ],
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "document_id",
          "order_number"
        ],
        "properties": {
          "document_id": {
            "$ref": "schemas/DocumentId.schema.json"
          },
          "order_number": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    }
  }
}