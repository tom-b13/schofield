{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/Outputs.schema.json",
  "title": "Outputs",
  "type": "object",
  "description": "Canonical outputs envelope with headers and body.",
  "properties": {
    "headers": {
      "type": "object",
      "description": "Response headers exposed to clients.",
      "properties": {
        "Screen-ETag": { "$ref": "./ETag.schema.json" },
        "Question-ETag": { "$ref": "./ETag.schema.json" },
        "Questionnaire-ETag": { "$ref": "./ETag.schema.json" },
        "Document-ETag": { "$ref": "./ETag.schema.json" },
        "ETag": { "$ref": "./EtagToken.schema.json" }
      },
      "additionalProperties": true
    },
    "body": {
      "type": "object",
      "description": "Response body payload.",
      "properties": {
        "screen_view": {
          "type": "object",
          "properties": {
            "etag": { "$ref": "./ETag.schema.json" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["headers", "body"],
  "additionalProperties": false
}
