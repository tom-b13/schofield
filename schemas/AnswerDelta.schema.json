{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/AnswerDelta.schema.json",
  "title": "AnswerDelta",
  "type": "object",
  "properties": {
    "question_id": {
      "$ref": "https://example.com/schemas/QuestionId.schema.json"
    },
    "answer_kind": {
      "type": "string",
      "enum": [
        "short_string",
        "long_text",
        "boolean",
        "number",
        "enum_single"
      ]
    },
    "value": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "boolean"
        },
        {
          "type": "number"
        }
      ]
    },
    "option_id": {
      "oneOf": [
        {
          "$ref": "https://example.com/schemas/QuestionId.schema.json"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": [
    "question_id",
    "answer_kind",
    "value"
  ],
  "additionalProperties": false
}